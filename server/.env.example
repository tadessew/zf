# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=furnicraft
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DIALECT=postgres

# Alternative: Database URL (for cloud databases like Heroku, Railway, etc.)
DATABASE_URL=postgresql://username:password@localhost:5432/furnicraft

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex-at-least-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-here-also-make-it-very-long-and-complex
JWT_REFRESH_EXPIRES_IN=7d

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=furnicraft2024
ADMIN_EMAIL=admin@furnicraft.com

# Email Configuration (for contact forms and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@furnicraft.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-here-make-it-very-long-and-random
SESSION_MAX_AGE=86400000

# Security
BCRYPT_ROUNDS=12
ACCOUNT_LOCKOUT_TIME=7200000
MAX_LOGIN_ATTEMPTS=5

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Image Processing
IMAGE_QUALITY=80
THUMBNAIL_SIZE=300